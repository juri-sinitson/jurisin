{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@jurisin/artwork/api": ["libs/artwork/api/src/index.ts"],
      "@jurisin/artwork/feature": ["libs/artwork/feature/src/index.ts"],
      "@jurisin/non-prod-demos": ["libs/non-prod/demos/src/index.ts"],
      "@jurisin/non-prod-storybook": ["libs/non-prod/storybook/src/index.ts"],
      "@jurisin/shared/ui-common": ["libs/shared/ui-common/src/index.ts"],
      "@jurisin/shared/util": ["libs/shared/util/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
